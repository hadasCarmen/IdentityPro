<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PayPal Integration</title>
    <!-- Include the PayPal JavaScript SDK -->
</head>
<body>
    <script src="https://www.paypal.com/sdk/js?client-id=AVQtxsHXxTwurvaNsMWSzDyCl5dy2AfGjz_MJqG7Y9mWUdIl4ESF38LXo32bwRQ3JVysTqoacvUMLH8Z"></script>
    <div id="paypal-button-container" style="max-width: 1000px;"></div>
    var orderAmount = parseFloat(document.getElementById('cartTotal').value);

    <script>
        paypal.Buttons({
            style: {
                disableMaxWidth: true
            },
            createOrder: function (data, actions) {
                // Set up the transaction
                //var totalPrice = orderAmount;
                //console.log(totalPrice);
                return actions.order.create({
                    purchase_units: [{
                        amount: {
                            value: orderAmount.toFixed(2)
                        }
                    }]
                });
            },
            onApprove: function (data, actions) {
                // Capture the funds from the transaction
                return actions.order.capture().then(function (details) {
                    // Call your server to save the transaction
                    return fetch('/your-server-side-code', { /************/
                        method: 'post',
                        headers: {
                            'content-type': 'application/json'
                        },
                        body: JSON.stringify({
                            orderID: data.orderID
                        })
                    }).then(function (response) {
                        // Check the response from the server
                        if (response.ok) {
                            // Display a success message to the customer
                            alert('Payment successful! Thank you for your purchase');
                        } else {
                            // Display an error message if something went wrong
                            alert('An error occurred during payment processing. Please try again later');
                        }
                    }).catch(function (error) {
                        // Display an error message if fetch fails
                        console.error('Error sending request to server:', error);
                        alert('An error occurred during payment processing. Please try again later');
                    });
                });
            }
        //}).render('#view-paypal-link'); /************/
        }).render('#paypal-button-container'); /************/


    </script>
    <form action="/Orders/Pay" method="post">
        <!-- השדות של הטופס -->

        <button type="submit" id="submit-button" style="display: none;">שליחת הטופס</button>
    </form>

    <script>
        // Set the value of the hidden input field with the orderid from local storage
        var orderAmount = document.getElementById('cartTotal').value;
    </script>


</body>