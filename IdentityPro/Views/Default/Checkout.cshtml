@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ice_main_section1">
	<div class="container">
		<div id="success-message" class="success-message hidden">
			Product added to the cart! 🍓
		</div>
		<div class="row">
			<div class="col-lg-12">
				<div class="woocommerce">
					<div class="woocommerce-info">Have a coupon? <a href="#" class="showcoupon">Click here to enter your code</a></div>
					<div class="row">
						<form  name="checkout" method="post" class="checkout woocommerce-checkout col-sm-12" action="#">
							<div class="row">
								<div class="col-md-6">
									<div class="customer_details">
										<div class="woocommerce-billing-fields">
											<h3>Billing Details</h3>
											
											<p>
												<input type="text" name="billing_city" id="billing_city" value="">
												<label for="billing_city">Town / City <span class="required" title="required">*</span></label>
											</p>
											<p>
												<input type="text" class="input-text " name="billing_address_1" id="billing_address_1" value="">
												<label for="billing_address_1">Street address</label>
											</p>
											<p>
												<input type="text" class="input-text " name="billing_address_2" id="billing_address_2" value="">
												<label for="billing_address_2">Apartment, suite, unit etc. (optional)</label>
											</p>
											<div class="row">
												<div class="col-lg-6 col-md-6">
													<p>
														<input type="text" name="billing_postcode" id="billing_postcode" value="">
														<label for="billing_postcode">Zip <span class="required" title="required">*</span></label>
													</p>
												</div>
											</div>
											<div class="ice_check_box">
												<input type="checkbox" id="cat1" name="cat1">
												<label for="cat1">create an account</label>
											</div>
											<div class="create-account">
												<p>Create an account by entering the information below. If you are a returning customer please login at the top of the page.</p>
												<p>
													<input type="password" class="input-text " name="account_password" id="account_password" value="">
													<label for="account_password">Account password <span class="required" title="required">*</span></label>
												</p>
											</div>
										</div>
										<div class="woocommerce-shipping-fields">
											<h3>Additional Information</h3>
											<h4>order notes</h4>
											<p class="form-row form-row notes" id="order_comments_field">
												<textarea name="order_comments" id="order_comments" rows="2" cols="5"></textarea>
												<label for="order_comments">Notes about your order, e.g. special notes for delivery.</label>
											</p>
										</div>
									</div>
								</div>


								<div class="col-md-6">
									<h3>Your order</h3>
									<div class="woocommerce-checkout-review-order">
										<table class="shop_table woocommerce-checkout-review-order-table">
											<thead>
												<tr>
													<th class="product-name">Product</th>
													<th class="product-total">Total</th>
												</tr>
											</thead>
											<tbody>
												<tr class="cart_item">
													<td class="product-name">
														Flying Ninja&nbsp;
														<strong class="product-quantity">× 1</strong>
													</td>
													<td class="product-total">
														<div><span class="amount">$12.00</span></div>
													</td>
												</tr>
												<tr class="cart_item">
													<td class="product-name">
														Happy Ninja&nbsp;
														<strong class="product-quantity">× 1</strong>
													</td>
													<td class="product-total">
														<div><span class="amount">$18.00</span></div>
													</td>
												</tr>
												<tr class="cart_item">
													<td class="product-name">
														Happy Ninja&nbsp;<strong class="product-quantity">× 1</strong>
													</td>
													<td class="product-total">
														<div><span class="amount">$35.00</span></div>
													</td>
												</tr>
												<tr class="cart_item">
													<td class="product-name">Ninja Silhouette&nbsp;<strong class="product-quantity">× 1</strong></td>
													<td class="product-total">
														<div><span class="amount">$20.00</span></div>
													</td>
												</tr>
												<tr class="cart_item">
													<td class="product-name">
														Ninja Silhouette&nbsp;<strong class="product-quantity">× 1</strong>
													</td>
													<td class="product-total">
														<div><span class="amount">$35.00</span></div>
													</td>
												</tr>
											</tbody>
											<tfoot>
												<tr class="cart-subtotal">
													<th>Subtotal</th>
													<td><div><span class="amount">$120.00</span></div></td>
												</tr>
												<tr class="order-total">
													<th>Total</th>
													<td><div><strong><span class="amount">$120.00</span></strong></div> </td>
												</tr>
											</tfoot>
										</table>

										<div id="payment" class="woocommerce-checkout-payment">
											<ul class="payment_methods methods">
												<li>
													<div class="ice_radio_box">
														<input type="radio" id="radio1" name="radio">
														<label for="radio1">cash on delivery</label>
													</div>
												</li>
												<li>
													<div class="ice_radio_box">
														<input type="radio" id="radio2" name="radio">
														<label for="radio2">PayPal</label>
													</div>
												</li>
											</ul>

											<div class="form-row place-order">
												<input type="submit" class="ice_btn alt" name="woocommerce_checkout_place_order" id="place_order" value="Place order" data-value="Place order">
											</div>

										</div>

									</div>


								</div>
							</div>

						</form>

					</div>

				</div>
			</div>
		</div>
	</div>
</div>
<script>
	$(document).ready(function () {
		var successMessage = document.getElementById("success-message");
		// Check if TempData contains the registration message
		var registerMessage = '@TempData["RegisterMessage"]';
		console.log(registerMessage);
		if (registerMessage) {
			successMessage.innerText = registerMessage; // Set the message
			successMessage.classList.remove("hidden");
			setTimeout(function () {
				successMessage.classList.add("hidden"); // Hide the message
			}, 3000);
		}
	});
</script>
