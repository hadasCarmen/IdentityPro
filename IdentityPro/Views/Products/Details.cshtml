


@model IdentityPro.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="shop_img">
    <img src="/images/shop/@Model.ImagePath" alt="Product Image" class="img-responsive zoom">
</div>

<div class="shop_detail">
    <h2 class="ice_heading">@Html.DisplayFor(model => model.Name)</h2>
    <h1>$@Html.DisplayFor(model => model.Price)</h1>
    <p>@Html.DisplayFor(model => model.Description)</p>
    <p>@Html.DisplayFor(model => model.Amount) left</p>

</div>




<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
